<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 5.3//EN"
        "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="alpos.entity.Book" table="book">
        <id name="id" column="id" type="int">
            <generator class="native"></generator>
        </id>

        <property name="name" column="name" type="string"></property>
        <property name="authorId" column="author_id" type="int"></property>
        <property name="publisherId" column="publisher_id" type="int"></property>
        <property name="categoryId" column="category_id" type="int"></property>
        <property name="releaseYear" column="release_year" type="int"></property>
        
        <many-to-one name = "author" class ="alpos.entity.Author" column = "author_id" insert="false" update="false"/>
        <many-to-one name = "publisher" class ="alpos.entity.Publisher" column = "publisher_id" insert="false" update="false"/>
        <many-to-one name = "category" class ="alpos.entity.Category" column = "category_id" insert="false" update="false"/>
    </class>

</hibernate-mapping>